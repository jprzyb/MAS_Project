<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.pjatk.mas.s24512.masproject.NewCampaignController">
   <children>
      <HBox alignment="TOP_CENTER">
         <children>
            <Label text="ID: " />
            <TextField fx:id="idField" disable="true" />
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Name: " />
            <TextField fx:id="nameField" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Start date:" />
            <DatePicker fx:id="startDateDatePicker" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="End date:" />
            <DatePicker fx:id="endDateDatePicker" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Method of settlement:" />
            <ChoiceBox fx:id="methodOfSettlement" prefWidth="150.0" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Estimations:" />
            <TextField fx:id="estimationsField" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Needs new creation?" />
            <CheckBox fx:id="newCreationCheckBox" mnemonicParsing="false" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Creation size: " />
            <ChoiceBox fx:id="sizeChoiceBox" prefWidth="150.0" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Is animated?" />
            <CheckBox fx:id="animatedCheckBox" mnemonicParsing="false" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Communication channel: " />
            <ChoiceBox fx:id="communicationChannelChoiceBox" prefWidth="150.0" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Client:" />
            <ChoiceBox fx:id="clientChoiceBox" prefWidth="150.0" />
         </children>
      </HBox>
      <Label text="Description: " />
      <TextArea fx:id="descriptionField" prefHeight="200.0" prefWidth="200.0" />
      <Label text="Target description: " />
      <TextArea fx:id="targetField" prefHeight="200.0" prefWidth="200.0" />
      <Label text="Creation description: " />
      <TextArea fx:id="creationDescriptionField" prefHeight="200.0" prefWidth="200.0" />
      <Label />
      <ButtonBar nodeOrientation="LEFT_TO_RIGHT">
        <buttons>
          <Button mnemonicParsing="false" text="Cancel" />
            <Button mnemonicParsing="false" text="Save" />
        </buttons>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
