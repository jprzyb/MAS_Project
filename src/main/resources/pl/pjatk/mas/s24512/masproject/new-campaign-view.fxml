<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="TOP_CENTER" spacing="5.0" xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="TOP_CENTER">
         <children>
            <Label text="ID: " />
            <TextField disable="true" />
         </children>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Name: " />
            <TextField />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Start date:" />
            <DatePicker />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="End date:" />
            <DatePicker />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Method of settlement:" />
            <ChoiceBox prefWidth="150.0" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Estimations:" />
            <TextField />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Needs new creation?" />
            <CheckBox mnemonicParsing="false" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" disable="true" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Creation size: " />
            <ChoiceBox prefWidth="150.0" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" disable="true" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Is animated?" />
            <CheckBox mnemonicParsing="false" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Communication channel: " />
            <ChoiceBox prefWidth="150.0" />
         </children>
      </HBox>
      <HBox alignment="TOP_CENTER" spacing="5.0">
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
         <children>
            <Label text="Client:" />
            <ChoiceBox prefWidth="150.0" />
         </children>
      </HBox>
      <Label text="Description: " />
      <TextArea prefHeight="200.0" prefWidth="200.0" />
      <Label text="Target description: " />
      <TextArea prefHeight="200.0" prefWidth="200.0" />
      <Label />
      <ButtonBar nodeOrientation="LEFT_TO_RIGHT">
        <buttons>
          <Button mnemonicParsing="false" text="Cancel" />
            <Button mnemonicParsing="false" text="Save" />
        </buttons>
         <VBox.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </VBox.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </ButtonBar>
   </children>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
</VBox>
